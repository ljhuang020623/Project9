<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/taskDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/markCompleteButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Mark as Complete"
        android:background="@drawable/button_black_border"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@drawable/button_black_border"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/previousTaskButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Previous Task"
            android:background="@drawable/button_black_border"
            android:textColor="#000000"
            android:layout_marginEnd="24dp"/>

        <Button
            android:id="@+id/nextTaskButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Next Task"
            android:background="@drawable/button_black_border"
            android:textColor="#000000"
            android:layout_marginStart="24dp"/>
    </LinearLayout>
</LinearLayout>